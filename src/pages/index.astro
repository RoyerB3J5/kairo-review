---

<Layout>

	<Icon name={'share'} class={"w-[44px] h-[44px] absolute top-3 right-3"}/>
	<section class="w-full flex flex-col justify-center items-center gap-4">
		<div class="w-full flex flex-col justify-center items-center gap-[3px]">
			<img src="/Logo.webp" alt="Logo de Kairo Signs" width={72} height={72} loading="lazy" class="rounded-full"/>
			<div class="flex flex-col justify-center items-center ">
				<h1 class="text-[16px] font-bold leading-[175%]">@Kairosigns</h1>
				<div class="flex justify-center items-center gap-[3px] mt-[2px] mb-[11px]">
					<Icon name={'map'} class={"w-[9px] h-[11px]"}/>
					<p class="text-[10.5px] leading-[22px] font-heveltica">Lima, Peru</p>
				</div>
				<p class="font-heveltica text-[12px] leading-[18px] max-w-[204px] text-center">Impactful designs that will take your brand to the next level</p>
			</div>
			<SocialMedia />
		</div>
		<div class="flex w-full flex-col justify-center items-center gap-[10px]">
			{content.map((item, index)=> {
				return(
					<div class={`w-full bg-background-prim rounded-[5px] relative  h-[82px] flex justify-around items-center shadow-content ${index % 2 === 0 ? "pl-[48px]" : "pr-[48px]"}`}>
						<Icon name={"arrow"} class = {`w-[47px] h-[52px] absolute  top-0  ${index % 2 === 0 ? "left-0 rounded-tl-[5px]" : "right-0 scale-x-[-1] rounded-tr-[5px]"}`}/>
						<div class={`flex flex-col justify-center items-start max-w-[185px] ${index%2===0 ? "order-1" : "order-2"} `}>
							<p class="text-[14px] font-bold leading-[140%] text-primary-light">{item.title}</p>
							<div class="w-[76px] h-[1px] bg-secondary mb-[1px]"></div>
							<p class="font-heveltica text-[10px] leading-[140%]">{item.description}</p>
						</div>
						<div class={`self-end overflow-hidden ${index%2===0 ? "order-2" : "order-1"}`} style={`width: ${item.width}px; height: ${item.height}px;`}>
							<img src={`/${item.image}.webp`} alt={item.image} style="display: block; width: auto; height: auto;" class={`${index === 0 || index === 3 ? "scale-x-[-1]" : ""}`} loading="lazy"/>
						</div>
					</div>
				)
			})}
		</div>
		<Email/>
		<div class="flex  flex-col justify-center items-center gap-[9px] mt-[64px]">
			<p class="font-heveltica text-[14px] font-normal leading-[140%]">Powered by</p>
			<img src="/inkshape.svg" alt="Logo de Inkshape" width="117" height="30"/>
		</div>
	</section>
</Layout>

